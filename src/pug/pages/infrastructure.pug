    var title_page = 'Локація'
    var id_page = 'infra-page'
    var class_page = 'infra-page'
    var breadcrumbsLink = 'infra'
block scripts 
  script(defer src='./assets/scripts/vendors.bundle.js')
  script(defer src='./assets/scripts/index.bundle.js')
  script(defer src='./assets/scripts/index.js')
  script(defer src='./assets/scripts/location.js')
